# PRÁCTICA DE CONSOLIDACIÓN

# Ejercicio 1
# Guarda "python es genial"
# Imprime:
# a) en MAYÚSCULAS
# b) con capitalize()

leng = "python es genial"
print(leng.upper())
print(leng.capitalize())


# Ejercicio 2
# Guarda "HOLA mundo"
# Imprime:
# a) en minúsculas
# b) con title()

sal = "HOLA mundo"
print(sal.lower())
print(sal.title())


# Ejercicio 3
# Guarda tu nombre y apellido en minúsculas
# Imprime con title()

namenom = "guillermo vasquez"
print(namenom.title())


# Ejercicio 4
# Guarda "curso de PYTHON 3"
# Imprime:
# a) en minúsculas
# b) en MAYÚSCULAS

phrase = "curso de PYTHON 3"
print(phrase.lower())
print(phrase.upper())

# Ejercicio 5
# Guarda "aprendiendo python"
# Imprime la longitud del texto en MAYÚSCULAS

n_phrase = "aprendiendo python"
n_phrase_may = n_phrase.upper()
print(len(n_phrase_may))
